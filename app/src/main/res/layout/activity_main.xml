<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Кнопка для открытия шагомера -->
    <Button
        android:id="@+id/openStepCounterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Step Counter"
        android:layout_centerInParent="true"/>

    <!-- Кнопка для открытия игры -->
    <Button
        android:id="@+id/openGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Game"
        android:layout_below="@id/openStepCounterButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
